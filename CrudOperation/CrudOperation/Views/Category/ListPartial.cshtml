@model List<Demo>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    @if (Model.Count > 0)
    {
        <table class="table table-bordered rounded-1 border-secondary">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>StatusID</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{

                    foreach (Demo item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.StatusID</td>
                            <td>

                                <a type="submit" asp-controller="Category" asp-action="AddEdit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a>
                                <button type="submit" onclick="DeleteCategory(@item.ID,@item.StatusID)" class="btn btn-danger">Delete</button>

                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    }
    else
    {
        <p style="text-align:center">Record not found!</p>
    }
</body>
</html>